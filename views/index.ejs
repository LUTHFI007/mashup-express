<% title = 'View Users'%>
<%- include('navbar') %>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }


    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }


    th {
      background-color: #f2f2f2;
    }
  </style>

  <h1>Customer List</h1>


  <% if (data.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Password</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(customer => { %>
          <tr>
            <td><%= customer.email %></td>
            <td><%= customer.password %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No customers found.</p>
  <% } %>


